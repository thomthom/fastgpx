{
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "files.associations": {
    "*.gpx": "xml",
    ".env*": "dotenv"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.wordWrapColumn": 100,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "autopep8.args": [
    "--max-line-length=100"
  ],
  "[python]": {
    "editor.tabSize": 4
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "cmake.configureSettings": {
    "CMAKE_INSTALL_PREFIX": "${workspaceFolder}/install",
    "Python_EXECUTABLE": "${workspaceFolder}/.venv/Scripts/python.exe",
    "Python_ROOT_DIR": "${workspaceFolder}/.venv"
  },
  "cmake.configureOnEdit": false,
  "cmake.configureOnOpen": false,
  // "cmake.sourceDirectory": "${workspaceFolder}/cpp",
  "cmake.configureArgs": [
    "-DCMAKE_PREFIX_PATH=${workspaceFolder}/.venv/Lib/site-packages/nanobind11/cmake",
    "-DPython_EXECUTABLE=.venv/Scripts/python.exe",
    "-DFASTGPX_WARNINGS_AS_ERRORS=ON"
  ],
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "testMate.cpp.test.advancedExecutables": [
    {
      "pattern": "{build,Build,BUILD}/**/*{test,Test,TEST}*",
      "catch2": {
        "testGrouping": {
          "groupByExecutable": {
            "groupByTags": {
              "groupByTags": {
                "tags": [
                  [
                    "!mayfail"
                  ],
                  [
                    "!benchmark"
                  ],
                ]
              },
              "tags": [
                [
                  "bounds"
                ],
                [
                  "datetime"
                ],
                [
                  "distance"
                ],
                [
                  "errors"
                ],
                [
                  "filesystem"
                ],
                [
                  "unicode"
                ],
                [
                  "parse"
                ],
                [
                  "testdata"
                ],
              ],
            },
          },
        }
      }
    }
  ],
  "cSpell.words": [
    "fastgpx",
    "gpxpy",
    "polyline",
    "polylines",
    "pugi",
    "pugixml",
    "Roadtrip",
    "tinyxml",
    "trkpt",
    "trkseg"
  ]
  // "python.autoComplete.extraPaths": [
  //   "${workspaceFolder}/.venv/lib/site-packages"
  // ],
}
