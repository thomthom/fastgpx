{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": [
        "benchmark.py"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "externalTerminal"
    },
    {
      "name": "Attach to Python (Manual PID Input)",
      "type": "cppvsdbg",
      "request": "attach",
      // "processId": "${input:pidInput}"
      "processId": "24952"
    }
  ],
  "inputs": [
    {
      "id": "pidInput", // This will be referenced in the processId field
      "type": "promptString",
      "description": "Enter the Python process ID (PID):",
      "default": "" // Optionally provide a default value
    }
  ]
}
