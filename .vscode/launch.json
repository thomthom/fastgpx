{
  "version": "0.2.0",
  "configurations": [
    {
      // https://code.visualstudio.com/docs/cpp/launch-json-reference
      // https://vector-of-bool.github.io/docs/vscode-cmake-tools/debugging.html
      "name": "CMake MSVC Launch",
      "type": "cppvsdbg",
      "request": "launch",
      // Resolved by CMake Tools:
      "program": "${command:cmake.launchTargetPath}",
      "args": [
        // "--gtest_filter=TraceMapTest.TracePolygonsOnePolygon"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Python Debugger: Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "justMyCode": false
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": [
        "debug-test"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python C++ Debugger",
      "type": "pythoncpp",
      "request": "launch",
      "pythonConfig": "default",
      "cppConfig": "default (win) Attach"
    },
    {
      "name": "PyTest C++ Debugger",
      "type": "pythoncpp",
      "request": "launch",
      "pythonLaunchName": "Python: Debug PyTest",
      "cppConfig": "default (win) Attach"
    },
    {
      "name": "Python: Debug PyTest",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/Scripts/pytest.exe",
      "args": [
        "${file}",
        "-k",
        "test_gpx_time_bounds"
      ],
      "purpose": [
        "debug-test"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Run Catch2 Tests with Benchmarks",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [
        "[!benchmark]"
      ]
    }
  ]
}
